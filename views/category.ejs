<%- include('./partials/homenavbar.ejs'); %>

    <div class="container">
        <hr>
        <% articles.forEach(article=> { %>
            <div class="card mb-5">
                <div class="card-header">
                    <h2>
                        <%= article.title %>
                    </h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">
                        Ler artigo
                    </a>
                </div>
            </div>
            <% }); %>
    </div>

