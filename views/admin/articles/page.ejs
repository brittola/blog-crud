<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/homenavbar.ejs'); %>

    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article=> { %>
            <div class="card mb-5">
                <div class="card-header">
                    <h2>
                        <%= article.title %>
                    </h2>
                </div>
                <div class="card-body">
                    <p>Categoria: <strong>
                            <%= article.category.title %>
                        </strong></p>
                    <a class="btn btn-success" href="/<%= article.slug %>">
                        Ler artigo
                    </a>
                </div>
            </div>
        <% }); %>

        <div class="card mb-4">
            <div class="card-header">
                <% if (result.previous && result.page == 2) { %>
                    <a style="float: left;" href="/">&lt;&lt; Previous</a>
                <% } %>
                <% if (result.previous && result.page > 2) { %>
                    <a style="float: left;" href="/articles/page/<%= result.page - 1 %>">&lt;&lt; Previous</a>
                <% } %>
                <% if (result.next) { %>
                <a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Next &gt;&gt;</a>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs'); %>